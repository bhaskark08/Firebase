<mvc:View controllerName="chat.Chat.controller.View1" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" displayBlock="true" xmlns="sap.m">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
						<VBox width="10rem">
							<Label text="Current User ID" required="true"/>
							<Input id="CurrentUserId" change="fnMakeUserOnline" showSuggestion="true" suggestionItems="{/Users}">
								<suggestionItems>
									<core:Item text="{UserId}"/>
								</suggestionItems>
							</Input>
						</VBox>
						<Panel expandable="true" headerText="Create New User" width="auto" class="sapUiResponsiveMargin">
							<content>
								<VBox width="10rem">
									<Label text="User Id"/>
									<Input id="UserId"/>
									<Label text="User Name"/>
									<Input id="UserName"/>
									<Label text="Mail ID"/>
									<Input id="MailId"/>
									<Button text="Create New User" press="fnCreateNewUser"/>
								</VBox>
							</content>
						</Panel>
						<VBox id="Chat">
							<!-- mode="Delete" delete="fnDelete"-->
							<List items="{ path: '/Users', sorter: { path: 'OnlineText', descending: true, group: true } }">
								<StandardListItem icon="{= ${Online} ? './images/online.jpg' : './images/offline.jpg' }" title="{UserId}" description="{UserName}"
									type="Active" press="fnStartChart"></StandardListItem>
							</List>
						</VBox>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>